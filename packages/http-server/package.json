{
  "name": "@autorecord/http-server",
  "version": "1.1.0",
  "description": "Expose manager interface through HTTP",
  "type": "module",
  "main": "./lib/index.cjs",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "private": true,
  "scripts": {
    "build": "yarn run -T tsup",
    "watch": "yarn run -T tsup --watch",
    "start": "node ./lib/index.js",
    "start:dev": "yarn run -T tsup --watch --onSuccess \"node lib/index.js\"",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "lib"
  ],
  "repository": "https://github.com/WhiteMinds/LiveAutoRecord",
  "author": "WhiteMind",
  "license": "LGPL",
  "dependencies": {
    "@autorecord/bilibili-recorder": "workspace:^",
    "@autorecord/douyin-recorder": "workspace:^",
    "@autorecord/douyu-recorder": "workspace:^",
    "@autorecord/huya-recorder": "workspace:^",
    "@autorecord/manager": "workspace:^",
    "@autorecord/shared": "workspace:^",
    "cors": "^2.8.5",
    "env-paths": "^2.0.0",
    "express": "^4.18.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "ramda": "^0.28.0",
    "subtitle": "^4.2.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.185",
    "@types/morgan": "^1.9.3",
    "@types/ramda": "^0.28.15",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.0"
  }
}
