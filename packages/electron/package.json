{
  "name": "@autorecord/electron",
  "version": "4.0.0",
  "description": "Integrate two packets http-server and web, packaged as the client",
  "main": "./dist/main/index.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "app:dev": "electron-vite dev",
    "app:build": "electron-vite build && electron-builder",
    "app:preview": "electron-vite build && electron ."
  },
  "build": {
    "productName": "LAR 直播自动录制",
    "appId": "moe.teeio.lar",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "build/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "icon": "build/icons/icon.icns",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "icon": "build/icons"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "repository": "https://github.com/WhiteMinds/LiveAutoRecord",
  "author": "WhiteMind",
  "license": "LGPL",
  "installConfig": {
    "hoistingLimits": "dependencies"
  },
  "dependencies": {
    "@autorecord/http-server": "workspace:^",
    "@autorecord/shared": "workspace:^",
    "concurrently": "^7.4.0",
    "env-paths": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^20.1.1",
    "electron-builder": "^23.3.3",
    "electron-vite": "^1.0.14"
  }
}
