{
  "name": "@autorecord/electron",
  "version": "4.7.1",
  "description": "Integrate two packets http-server and web, packaged as the client",
  "type": "module",
  "main": "./dist/main/index.js",
  "private": true,
  "scripts": {
    "dev": "electron-vite dev",
    "app:build": "electron-vite build && electron-builder",
    "app:preview": "electron-vite build && electron ."
  },
  "build": {
    "productName": "LAR 直播自动录制",
    "appId": "moe.teeio.lar",
    "directories": {
      "buildResources": "build/icons",
      "output": "build/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "icon": "build/icons/icon.icns",
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "icon": "build/icons"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "repository": "https://github.com/WhiteMinds/LiveAutoRecord",
  "author": "WhiteMind",
  "license": "LGPL",
  "dependencies": {
    "@autorecord/http-server": "workspace:^",
    "@autorecord/shared": "workspace:^",
    "env-paths": "^3.0.0",
    "ffmpeg-static": "^5.0.2",
    "winston": "catalog:"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0"
  }
}
