{
  "name": "@autorecord/http-server",
  "version": "1.1.0",
  "description": "Expose manager interface through HTTP",
  "type": "module",
  "main": "./lib/index.cjs",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "private": true,
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "start": "node ./lib/index.js",
    "start:dev": "tsup --watch --onSuccess \"node lib/index.js\"",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "lib"
  ],
  "repository": "https://github.com/WhiteMinds/LiveAutoRecord",
  "author": "WhiteMind",
  "license": "LGPL",
  "dependencies": {
    "@autorecord/bilibili-recorder": "workspace:^",
    "@autorecord/core": "workspace:^",
    "@autorecord/douyin-recorder": "workspace:^",
    "@autorecord/douyu-recorder": "workspace:^",
    "@autorecord/huya-recorder": "workspace:^",
    "@autorecord/manager": "workspace:^",
    "@autorecord/shared": "workspace:^",
    "cors": "^2.8.6",
    "express": "^5.0.0",
    "lodash": "catalog:",
    "morgan": "^1.10.1",
    "ramda": "catalog:",
    "subtitle": "^4.2.2",
    "winston": "catalog:"
  },
  "optionalDependencies": {
    "playwright": "^1.58.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/lodash": "catalog:",
    "@types/morgan": "^1.9.9",
    "@types/ramda": "catalog:",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
